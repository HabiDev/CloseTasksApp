.container
  = turbo_frame_tag "modal"
    .modal-header
      h3#modalNewEditLabel.modal-title
        | Календарь работ 
      button.btn-close[type="button" data-bs-dismiss="modal" aria-label="Close"]         
    .modal-body
      = month_calendar(events: @events, attribute: :limit_at) do |date, events|
        = date.day
        - events.each do |mission|
          span.badge.text-bg-success
            i.bi.bi-alarm-fill
            span.ms-1
              = link_to "#{mission.number}",  mission_path(mission.mission_id), class: "text-bg-success text-decoration-none"